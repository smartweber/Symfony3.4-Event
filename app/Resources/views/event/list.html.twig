{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-xs-12">
                <h1>Edit List</h1>

                <a href="{{ path('create_call_event')}}" class="btn btn-primary btn-sm my-3">Create Call Event</a>
                <a href="{{ path('create_meeting_event')}}" class="btn btn-success btn-sm my-3">Create Meeting Event</a>

                <table class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Event Date</th>
                            <th>Event Type</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in event_list %}
                        <tr>
                            <td>{{ event.name }}</td>
                            <td>{{ event.eventDate|date("m/d/Y") }}</td>
                            <td>{{ event.type }}</td>
                            <td>
                                {% if event.type == 'Call' %}
                                    <a href="{{ path('edit_call_event', { 'event': event.id }) }}" class="btn btn-success btn-sm">Edit</a>
                                {% else %}
                                    <a href="{{ path('edit_meeting_event', { 'event': event.id }) }}" class="btn btn-success btn-sm">Edit</a>
                                {% endif %}

                                {% if event.type == 'Call' %}
                                    <a href="{{ path('delete_call_event', { 'event': event.id }) }}" class="btn btn-danger btn-sm">Delete</a>
                                {% else %}
                                    <a href="{{ path('delete_meeting_event', { 'event': event.id }) }}" class="btn btn-danger btn-sm">Delete</a>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}